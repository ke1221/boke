<% include header %>

	<section class="element-page">
	    <div class="container">
			<h2 class="text-center">编辑分类</h2>
			<hr class="hr-mid">

			<section class="form-section">
		  		<h3>填写信息</h3>
		  		<form action="/admin/itemUpdate" method="post">
					<fieldset>
			  			<div class="row">
			  				<input type="hidden" name="_id" value="<%=item._id%>">
			  				<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
			  					<input type="text" name="name" value="<%= item.name %>">
			  				</div>

			  				<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
								<input type="number" name="order" value="<%= item.order %>">
			 				</div>

			  				<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
								<input type="text" name="info" value="<%= item.info %>">
			 				</div>
						
			  			</div>
			  			<button type="submit" class="btn btn-default">确认增加</button>
			  			<button type="reset" class="btn btn-default">清空重写</button>
					</fieldset>
		  		</form>
			</section>

		<hr class="line-full">		
	</section>


<% include footer %>

