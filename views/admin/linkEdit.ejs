<% include header %>

	<section class="element-page">
	    <div class="container">
			<h2 class="text-center">更新链接</h2>
			<hr class="hr-mid">
			<section class="form-section">
		  		<h3>更新信息</h3>
		  		<form action="/admin/linkUpdate" method="post" >
					<fieldset>
			  			<div class="row">
							<input type="hidden" name="_id" value="<%= links._id %>">
			  				<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
			  					<label>链接描述</label>
			  					<input type="text" name="title" value="<%= links.title %>">
			  				</div>

			  				<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
			  					<label>链接名称</label>
								<input type="text" name="name" value="<%= links.name %>">
			 				</div>

							<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
								<label>链接地址</label>
								<input type="text" name="link" value="<%= links.link %>">
							</div>
							
			  				
			  			</div>
			  			<button type="submit" class="btn btn-default">确认更新</button>
			  			<button type="reset" class="btn btn-default">清空重写</button>
					</fieldset>
		  		</form>
			</section>

		<hr class="line-full">		
	</section>



<% include footer %>

